<h1><%= t :organizations %></h1>

<ul class="bordered">
  <% @organizations.each do |organization| %>
    <li>
      <% name = "<span class='organization_name'>#{h organization.name}</span> - #{h organization.description}".html_safe %>  
      <% if organization == @current_organization %>
        <%= link_to name, organization_path(organization) %>  
      <% else %> 
        <%= name %> 
      <% end %>
      <% if current_user.is_cesia? %>  
        <span class="actions"><%= link_to_edit edit_organization_path(organization) %></span>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user.is_cesia? %>  
  <%= link_to_new 'Nuova struttura', new_organization_path %>
<% end %>

