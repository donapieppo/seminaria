<% if (! @what) || (@what == 'main') %>  
  <%= render 'form' %>
<% end %>

<% if (! @what) || (@what == 'where') %>  
  <%= render 'where' %>  
<% end %>

<div style="text-align: center">
  <%= link_to 'PREPARA EMAIL', mail_text_seminar_path(@seminar), class: 'btn btn-lg btn-warning my-3 text-end' %>  
</div>

<% unless @what %>
  <div class="row">
    <div class="col-md-6">
      <%= render 'seminar_documents_form' %>
    </div>
    <div class="col-md-6">
      <%= render 'seminar_repayment_button' %>  
    </div>
  </div>
<% end %>

<% if policy(@seminar).destroy? %>
  <div class="text-end">
    <div class="btn btn-danger my-4"><%= link_to_delete 'Cancella il seminario', seminar_path(@seminar) %></div>
  </div>
<% end %>
