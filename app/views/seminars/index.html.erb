<h1><%= @title %></h1>

<% if user_signed_in? %>
  <div class="home-filters">
    <% if params[:only_current_user] %>
      <%= link_to dmicon('list', text: "prossimi seminari"), root_path, class: 'btn btn-outline-primary' %> 
    <% else %>
      <%= link_to dmicon('list', text: "seminari inseriti da me"), user_seminars_path, class: 'btn btn-outline-primary' %> 
    <% end %>
    <%= link_to dmicon('list', text: "seminari sui miei fondi"), funds_seminars_path, class: 'btn btn-outline-primary' %> 
  </div>
<% end %>

<% @seminars.each do |seminar| %>  
  <%= render seminar %>  
<% end %>

