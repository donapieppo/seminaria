<%= horizontal_form_for @serial do |serial| %>  
  <%= serial.dm_error_notification %>  
  <fieldset>
    <%= form_legend(@serial) %>

    <%= serial.input :title %>  
    <%= serial.input :committee %> 
    <%= serial.input :description %> 
    <%= serial.input :active %> 
    <%= serial.input :link %>
    <%= serial.submit %>  
  </fieldset>
<% end %>

