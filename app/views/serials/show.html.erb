  <% unless @serial.link.blank? %>  
    <%= link_to icon('home', text: 'pagina web ufficiale'), @serial.link, target: "_blank" %>
  <% end %>
  <%= link_to_edit 'modifica la serie', edit_serial_path(@serial) if user_admin? %>
</p>

<% @seminars.each do |seminar| %>
  <%= render seminar %>
<% end %>

