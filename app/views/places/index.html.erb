<h1>Luoghi</h1>

<div class="list-group mb-3">
  <% @places.each do |place| %>
    <%= link_to place, place_path(place), class: "list-group-item list-group-item-action" %>
  <% end %>
</div>

<% if user_is_manager? %>  
  <p><%= link_to_new "Aggiungi un nuovo luogo presso #{current_organization.description}", new_place_path %></p>
<% end %>
