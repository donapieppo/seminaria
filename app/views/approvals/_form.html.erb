<%= render @highlight %>  

<%= horizontal_form_for [@highlight, @approval] do |approval| %>  
  <%= approval.dm_error_notification %>  
  <%= approval.input :judgment, 
                     :collection => Approval.possible_judgments, 
                     :label_method => lambda {|f| I18n.t(f)}, :include_blank => false %>
  <%= approval.input :justification %>  
  <%= approval.submit %>  
<% end %>
