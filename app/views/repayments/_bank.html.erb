<%= dm_card title: "#{checked_icon(true)} Coordinate Bancarie <small>(dati non bloccanti)</small>".html_safe do %>
  <dl class="inline">
    <dt>Iban</dt><dd><%= repayment.iban %></dd>
    <dt>Swift</dt><dd><%= repayment.swift %></dd>
    <dt>Aba</dt><dd><%= repayment.aba %></dd>
    <% unless repayment.italy %>
      <dt><%= t :bank_name %></dt><dd><%= repayment.bank_name %></dd>
      <dt><%= t :bank_address %></dt><dd><%= repayment.bank_address %></dd> 
    <% end %>
  </dl>
  <% unless repayment.italy %>
    <p class="small">Nome della banca e indirizzo sono richiesti solo in caso di residenza extra UE.</p>
  <% end %>
  <% if user_can_edit %>  
    <div class="text-end">
      <%= link_to 'Modifica', edit_repayment_path(repayment, what: :bank, modal: 1), class: :button, data: { turbo_frame: 'modal' } %>
    </div>
  <% end %>
<% end %>


