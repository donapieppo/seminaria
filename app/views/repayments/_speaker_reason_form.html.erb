<div class="dm-card">
  <div class="dm-card-title">
    Scelta conferenziere <span class="float-end"><%= checked_icon(repayment_speaker_reason_ok?(repayment.object)) %></span>
  </div>
  <div class="dm-card-body">
    <%= repayment.input :reason, input_html: {rows: 6} %>  
    <% cvs = repayment.object.curricula_vitae.all %>  
    <% if cvs.any? %>  
      <div class=row">
        <div class="col-sm-9 offset-sm-3">
          <% cvs.each do |doc| %>  
            <strong>allegato:</strong> 
            <%= link_to_cv doc %> 
          <% end %>
        </div>
      </div>
    <% else %>
      <%= repayment.input :cv, as: :file, hint: t(:dlgs33_2013) %>
    <% end %>
  </div>
</div>


