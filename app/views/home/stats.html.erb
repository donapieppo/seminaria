<h1>Statistiche</h1>

<div class="row">
  <div class="col-md-6">
    <h2>Seminari per anno</h2>
    <% @seminars_per_years.each do |stat| %>
      <li><%= stat.y %>: <strong><%= stat.c %></strong></li>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2>Convegni per anno</h2>
    <% @conferences_per_years.each do |stat| %>
      <li><%= stat.y %>: <%= stat.c %></li>
    <% end %>
  </div>
</div>

