<%= dm_menu do %>  
  <%= dm_header(dm_header_subtitle: (current_organization ? current_organization.description : '')) %>
  <%= dm_nav do  %>  
    <li><%= link_to big_dmicon('home', text: 'Home'), root_path %></li>
    <% if user_signed_in? %>  
      <li><%= link_to big_dmicon('plus-circle', text: 'Inserisci seminario'), choose_type_seminars_path %></li>
    <% end %>
    <li><%= link_to big_dmicon('list', text: 'Seminari periodici'), serials_path %></li>
    <li><%= link_to big_dmicon('archive', text: 'Archivio'), archive_seminars_path %></li>
    <% if user_cesia? %>  
      <li><%= link_to big_dmicon('users', text: 'Auths'), admins_path %></li>
    <% end %>
    <% if policy(@current_organization).manage? %>  
      <%= dropdown_menu :amm, big_dmicon('cogs', text: ' Amm.') do  %>
        <%= link_to fwdmicon('euro-sign', text: 'Compensi'), repayments_path %>
        <%= link_to fwdmicon('wallet', text: 'Fondi'), funds_path %>
        <div class="dropdown-divider"></div>
        <%= link_to fwdmicon('map-marker', text: 'Luoghi'), places_path %>
        <%= link_to fwdmicon('comment', text: 'Topics'), arguments_path %>
      <% end %>
    <% elsif policy(@current_organization).see? %>
      <li><%= link_to big_dmicon('euro-sign', text: 'Compensi'), repayments_path %></li>
    <% end %>
  <% end %>
<% end %>

