<%= content_tag :div, class: "conference" do %>
  <div class="seminar-header">
    <%= render ClockTagComponent.new(@conference.start_date) %>  
    <div class="row">
      <div class="when col-md-2">
        <%= render DayTagComponent.new(@conference) %>  
      </div>

      <div class="col">
        <div class="title">
          <div class="">
            Conference
          </div>
          <div class="my-2">
            <% if @conference_policy.update? %>  
              <%= link_to @conference.title, @conference %>
            <% elsif !@conference.url.blank? %>
              <%= link_to @conference.title, @conference.url %>
            <% else %>
              <%= @conference.title %>
            <% end %>
          </div>
          <div class="small fw-normal my-2">
            da <%= l @conference.start_date, format: :dm_with_day %> 
            a <%= l @conference.end_date, format: :dm_with_day %>
          </div>
        </div>
      </div>
    </div> 
  </div> 

  <div class="seminar-body">
    <div class="abstract">
      <%= @conference.abstract %>
    </div>
  </div>

  <div class="seminar-footer">
    <span class="committee">
      <hr/>
      <%= t :organized_by %> <%= @conference.committee %> 
    </span>
  </div>
<% end %>
